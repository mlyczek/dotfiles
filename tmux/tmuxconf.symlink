set -g  default-terminal            "tmux-256color"
set -ga terminal-overrides          ",xterm-256color:Tc"

# for neovim ESC to work without delay
set -g  escape-time                 10

# split nice
bind | split-window -h
bind - split-window -v
unbind '"'
unbind %

# reload configuration
bind r source-file ~/.tmux.conf
